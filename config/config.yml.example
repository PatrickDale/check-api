development: &default
  secret_token: somethingsecret
  authorization_header: 'X-Checkdesk-Token'
  twitter_consumer_key:
  twitter_consumer_secret:
  facebook_app_id:
  facebook_app_secret:
  slack_app_id:
  slack_app_secret:
  pender_host: http://pender:3200
  pender_key: dev
  elasticsearch_host: elasticsearch
  elasticsearch_port: 9200
  elasticsearch_log: true
  graphql_debug: true
  checkdesk_client: http://localhost:3333
  terms_of_service: 'Your content of TOS'
  allow_duplicated_urls: false
  default_mail: root@localhost
  checkdesk_base_url: http://localhost:3000
  send_welcome_email_on_registration: false
  elasticsearch_index:
  # smtp mail settings
  smtp_host: smtp.gmail.com # google's default smtp
  smtp_port: 587
  smtp_user: # usually your gmail account
  smtp_pass: # usually your gmail account password

test:
  <<: *default
  pender_key: 'test'

production:
  <<: *default

